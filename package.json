  "bugs": {
    "url": "https://github.com/irishjedi77/Moonlight/issues"
  },
  "homepage": "https://github.com/irishjedi77/Moonlight#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun": "^0.5.0",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.6.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.12.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sweetalert": "^2.1.2",
    "validation": "0.0.1",
    "validator": "^11.0.0"
  }
}
